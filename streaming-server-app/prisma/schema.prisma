generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vod {
  id        Int           @id @default(autoincrement())
  title     String
  filename  String
  path      String
  mimetype  String
  status    ProcessStatus @default(UNPROCESSED)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model Live {
  id        Int        @id @default(autoincrement())
  title     String
  filename  String
  path      String
  mimetype  String
  status    LiveStatus @default(ON_AIR)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum LiveStatus {
  ON_AIR
  OFF_AIR
}

enum ProcessStatus {
  UNPROCESSED
  PROCESSING
  PROCESSED
  FAILED
}
